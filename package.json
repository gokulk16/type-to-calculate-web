{
  "name": "type-to-calculate-web",
  "version": "1.0.0",
  "description": "Web application to calculate day to day math as you type",
  "scripts": {
    "build": "node esbuild.js",
    "test": "vitest --config ./vitest.config.js",
    "watch": "npm-watch"
  },
  "watch": {
    "build": {
      "patterns": [
        "src",
        "assets",
        "locales",
        "html",
        "js",
        "css"
      ],
      "extensions": "js,html,css,json",
      "legacyWatch": true,
      "delay": 2000,
      "runOnChangeOnly": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gokulk16/type-to-calculate-web.git"
  },
  "source": "index.html",
  "keywords": [
    "type-to-calculate",
    "calculate",
    "calculator",
    "online calculator"
  ],
  "type": "module",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "author": "https://github.com/gokulk16",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gokulk16/type-to-calculate-web/issues"
  },
  "homepage": "https://github.com/gokulk16/type-to-calculate-web#readme",
  "dependencies": {
    "@sentry/browser": "^8.27.0",
    "@sentry/esbuild-plugin": "^2.22.3",
    "braces": "3.0.3",
    "country-to-currency": "^1.1.5",
    "lodash": "^4.17.21",
    "mathjs": "^12.4.3",
    "show-toast": "^1.1.4",
    "web-browser-storage": "^0.1.14"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.6.0",
    "esbuild": "^0.20.2",
    "esbuild-copy-static-files": "^0.1.0",
    "fs-extra": "^11.2.0",
    "jsdom": "^24.1.1",
    "npm-watch": "^0.12.0",
    "vitest": "^1.6.0"
  }
}
